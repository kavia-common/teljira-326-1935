# Identity Provider (IdP) environment variables (example)
# Copy to .env and set appropriate values before running locally.

# Server
PORT=4000
HOST=0.0.0.0
SITE_URL=http://localhost:4000
NODE_ENV=development

# JWT / Sessions
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=1h
COOKIE_SECRET=replace-with-cookie-secret

# OIDC / OAuth2
OIDC_ISSUER_URL=https://example-idp.com
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_REDIRECT_URI=http://localhost:4000/auth/callback
OIDC_SCOPES=openid profile email

# SAML (if applicable)
SAML_ENTRY_POINT=https://example-idp.com/saml/login
SAML_ISSUER=http://localhost:4000
SAML_CALLBACK_URL=http://localhost:4000/saml/callback
SAML_CERT=-----BEGIN CERTIFICATE-----...-----END CERTIFICATE-----

# Database (if IdP persists users/sessions)
PGHOST=localhost
PGPORT=5432
PGDATABASE=idp
PGUSER=idp_user
PGPASSWORD=idp_password
PGSSLMODE=disable

# Rate limiting / Security
CSRF_COOKIE_NAME=csrf_token
WEBHOOK_SECRET=replace-with-webhook-secret
