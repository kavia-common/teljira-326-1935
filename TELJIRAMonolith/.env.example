# TELJIRAMonolith environment example
# Copy to .env and set appropriate values before running locally.

# Server
PORT=3000
HOST=0.0.0.0
SITE_URL=http://localhost:5173
NODE_ENV=development

# JWT / Sessions
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=1h
COOKIE_SECRET=replace-with-cookie-secret
PASSWORD_PEPPER=optional-pepper

# Database
PGHOST=localhost
PGPORT=5432
PGDATABASE=sprintflow
PGUSER=sprintflow
PGPASSWORD=replace-with-db-password
PGSSLMODE=disable

# Security
CSRF_COOKIE_NAME=csrf_token
WEBHOOK_SECRET=replace-with-webhook-secret
