# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
APP_NAME=SprintFlow
SITE_URL=http://localhost:3000

# Security
JWT_SECRET=replace-with-long-random-secret
JWT_EXPIRES_IN=1h
COOKIE_SECRET=replace-with-cookie-secret
PASSWORD_PEPPER=replace-with-pepper
CSRF_COOKIE_NAME=csrf_token

# Database (PostgreSQL)
PGHOST=localhost
PGPORT=5432
PGDATABASE=sprintflow
PGUSER=sprintflow_user
PGPASSWORD=replace-with-db-password
PGSSLMODE=disable

# Optional OIDC/SSO
OIDC_ISSUER_URL=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URI=http://localhost:3000/api/auth/oidc/callback

# Email/Notifications (placeholder)
NOTIFY_PROVIDER=console
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=no-reply@sprintflow.local

# Webhook signing
WEBHOOK_SECRET=replace-with-webhook-secret
