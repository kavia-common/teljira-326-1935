{
  "name": "sprintflow-monolith",
  "version": "0.1.0",
  "description": "SprintFlow - Jira-like monolith with React frontend, Express backend, and PostgreSQL",
  "private": true,
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:all": "concurrently \"npm:dev\" \"npm --prefix frontend run dev\"",
    "build:openapi": "node generate_openapi.js",
    "lint": "eslint .",
    "test": "jest",
    "migrate": "node src/db/migrate.js",
    "seed": "node src/db/seed.js",
    "build:frontend": "npm --prefix frontend run build",
    "serve:frontend": "npm --prefix frontend run preview",
    "postinstall": "npm --prefix frontend install || true"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "argon2": "^0.41.1",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.6",
    "cors": "2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "socket.io": "^4.7.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ignore": [
      "node_modules",
      "package.json",
      "package-lock.json",
      "*.lock",
      "*.log",
      "*.md",
      ".git",
      "dist",
      "build",
      "frontend/dist",
      "interfaces"
    ],
    "ext": "js,json"
  }
}
