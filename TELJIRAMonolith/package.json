{
  "name": "sprintflow-monolith",
  "version": "0.1.0",
  "description": "SprintFlow - Jira-like monolith with React frontend, Express backend, and PostgreSQL",
  "private": true,
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:all": "concurrently \"npm:dev\" \"npm --prefix frontend run dev\"",
    "build:openapi": "node generate_openapi.js",
    "lint": "eslint .",
    "test": "jest",
    "migrate": "node src/db/migrate.js",
    "seed": "node src/db/seed.js",
    "build:frontend": "npm --prefix frontend run build",
    "serve:frontend": "npm --prefix frontend run preview",
    "postinstall": "npm --prefix frontend install --no-audit --no-fund || true"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "argon2": "^0.44.0",
    "compression": "^1.8.1",
    "concurrently": "^9.2.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^12.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^9.35.0",
    "globals": "^16.3.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ignore": [
      "node_modules",
      "package.json",
      "package-lock.json",
      "*.lock",
      "*.log",
      "*.md",
      ".git",
      "dist",
      "build",
      "frontend/dist",
      "interfaces"
    ],
    "ext": "js,json"
  }
}
